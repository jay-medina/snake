{
  "cacheDirectory": "./.jest",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(.+).test.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "\\.(css)$": "<rootDir>/config/jest/styleMocks.js"
  },
  "setupFiles": ["./config/jest/enzyme.js"],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "coverageReporters": ["html", "text"]
}
